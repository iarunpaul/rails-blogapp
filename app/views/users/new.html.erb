
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<span id="signup-header"><h2> Sign Up </h2></span>
			<%= form_for @user do |form| %>
				<% if @user.errors.any? %>
				    <div class=" well error_messages">
				      <h2>Form is invalid</h2>
				      <ul>
				        <% @user.errors.full_messages.each do |message| %>
				          <li><%= message %></li>
				        <% end %>
				      </ul>
				    </div>
				  <% end %>
				<div class="form-group">
					<span id="signup-email"><%= form.label :email %></span>
					<%= form.email_field :email, class:'form-control' %>
				</div>
				<div class="form-group">
					<span id="signup-password"><%= form.label :password %></span>
					<%= form.password_field :password, class:'form-control' %>
				</div>
				<div class="form-group">
					<span id="signup-password-confirm"><%= form.label :password_confirmation %></span>
					<%= form.password_field :password_confirmation, class:'form-control' %>
				</div>
				<%= form.submit "Sign Up", class:'btn btn-success'%>
			<% end %>
		</div>
	</div>
</div>