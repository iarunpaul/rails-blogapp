<div class = "container text-center">
  <h2>
  <span id="title" data-mercury="full"><%== @article.title %></h2>
  </strong>
</div>

<div class = "well container">
  <strong>Content:</strong>
  <span id="content" data-mercury="full"><%== @article.content %></span>
</div>

<div class= "container">
	<span><%= link_to "Edit", edit_article_path, class: 'btn btn-primary'%></span>
	<span><%= link_to "Delete", article_path(@article.id) , method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger' %></span>
	<span><%= link_to "Back", articles_path, class: 'btn btn-default' %></span>
</div>
<div class="container">
	<div class="well">
		<h4> Add Comments: </h4>

		<%== render 'comments/form' %>
		<p><%= link_to "Edit Page", "/editor" + request.path, id: "edit_link", data: {save_url: mercury_update_article_path(@article)} %></p>
	</div>
</div>

<div class= "container">

		<h3>Comments:</h3>
		<%== render @article.comments %>

</div>


</div>

