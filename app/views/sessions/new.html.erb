<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<span id="login-header"><h2>Log In</h2></span>
			<%= form_tag sessions_path do %>
				<div class="form-group">
					<span id="login-email"><%= label_tag :email %></span>
					<span class="form-control"><%= email_field_tag :email, params[:email] %></span>
				</div>
				<div class="form-group">
					<span id="login-password"><%= label_tag :password %></span>
					<span class="form-control"><%= password_field_tag :password %></span>
				</div>
				<%= submit_tag "Log In", class:'btn btn-primary'%>
			<% end %>
		</div>
	</div>
</div>